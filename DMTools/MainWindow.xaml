<Window x:Class="DMTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DMTools"
        mc:Ignorable="d"
        Title="Dungeon Master Tools for DnD 5e" Height="350" Width="525">
    <Grid>
        <TabControl x:Name="tabControl">
            <TabItem Header="NPCs">
                <Grid Background="#FFE5E5E5">
                    <Button x:Name="CreateNpcButton" Content="Create NPC" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="CreateNpcButton_Click"/>
                    <DataGrid x:Name="NpcGrid" Margin="10,107,10,10" RenderTransformOrigin="-5.819,-1.879"/>
                </Grid>
            </TabItem>
            <TabItem Header="Cities">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
